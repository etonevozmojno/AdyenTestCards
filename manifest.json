{
  "manifest_version": 3,

  "name": "Adyen Test Cards",
  "homepage_url": "https://github.com/etonevozmojno/AdyenTestCards",
  "description": "Shows test cards accepted by Adyen payment system",
  "version": "2.0",

  "action": {
    "default_icon": "adyen_logo.png",
    "default_popup": "cards_list.html",
    "default_title": "Adyen Test Cards"
  },
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "web_accessible_resources": [
    {
      "resources": [ "*.json" ],
      "matches": [ "https://*/*", "http://*/*" ]
    }
  ]
}
